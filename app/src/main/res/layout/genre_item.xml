<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/genreViewLayout"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/reg_screen_landscape" />


        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/movieImageView"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:clickable="false"
            android:ellipsize="end"
android:textAlignment="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Action"
            android:textColor="@color/contentTitleColor"
            android:textSize="16sp"
            android:textStyle="normal" />


    </RelativeLayout>
</RelativeLayout>