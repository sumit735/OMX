<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:layout_margin="5dp"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/light_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/films"
            />



        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView"
            android:layout_alignBottom="@+id/movieImageView"
            android:layout_alignBaseline="@+id/movieImageView"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:maxLines="1"
            android:padding="2dp"
            android:text="Movies"
            android:layout_marginBottom="6dp"

            android:textColor="@color/contentTitleColor"
            android:textSize="19sp"
            android:textStyle="normal" />


    </RelativeLayout>
</RelativeLayout>