<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:layout_margin="7dp"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="170dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/logo"
            />

        <ImageView
            android:id="@+id/movieImageOverlay"
            android:layout_width="170dp"
            android:layout_height="95dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/content_list_overlay"

            />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView"
            android:layout_alignBottom="@+id/movieImageOverlay"
            android:layout_alignBaseline="@+id/movieImageOverlay"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:maxLines="1"
            android:padding="2dp"
            android:text=""
            android:layout_marginBottom="6dp"

            android:textColor="@color/contentTitleColor"
            android:textSize="16sp"
            android:textStyle="normal" />


    </RelativeLayout>
</RelativeLayout>